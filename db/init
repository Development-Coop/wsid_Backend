const admin = require('firebase-admin');
const path = require('path');
const fs = require('fs');

// Debug the file detection
const serviceAccountPath = path.join(__dirname, '../db/serviceAccountKey.json');
console.log('Looking for service account at:', serviceAccountPath);
console.log('File exists:', fs.existsSync(serviceAccountPath));
console.log('NODE_ENV:', process.env.NODE_ENV);
console.log('Current working directory:', process.cwd());
console.log('__dirname:', __dirname);

const isLocalDevelopment = process.env.NODE_ENV !== 'production' && fs.existsSync(serviceAccountPath);
console.log('isLocalDevelopment:', isLocalDevelopment);

let credential;

if (isLocalDevelopment) {
    // Use dynamic import or fs.readFileSync to avoid bundling issues
    try {
        const serviceAccountData = fs.readFileSync(serviceAccountPath, 'utf8');
        const serviceAccount = JSON.parse(serviceAccountData);
        credential = admin.credential.cert(serviceAccount);
        console.log('Using service account file for Firebase authentication');
    } catch (error) {
        console.error('Error reading service account file:', error);
        throw error;
    }
} else {
    // Use environment variables for production
    credential = admin.credential.cert({
        privateKey: process.env.FIREBASE_PRIVATE_KEY.replace(/\\n/g, '\n'),
        clientEmail: process.env.FIREBASE_CLIENT_EMAIL,
        projectId: process.env.FIREBASE_PROJECT_ID
    });
    console.log('Using environment variables for Firebase authentication');
}

admin.initializeApp({
    credential: credential,
    databaseURL: `https://${process.env.FIREBASE_PROJECT_ID}-default-rtdb.firebaseio.com`,
    storageBucket: process.env.FIREBASE_BUCKET
});

const db = admin.firestore();

module.exports = db;